.post-nav 
  display flex
  flex-wrap nowrap
  justify-content space-between
  // &:before,
  // &:after 
  //   content: " "
  //   display: table
  

  & a.prev,
  & a.next
    white-space: nowrap;
    text-overflow: ellipsis;
    word-break: break-all;
    overflow: hidden;
    white-space: nowrap;
    font-weight: 600
    font-size: 16px

    transition-property: transform
    transition-timing-function: ease-out
    transition-duration: 0.3s
  

  
  & .prev::before 
    content "<"
    margin-right .5em
  

  & a.prev:hover 
    transform: translateX(-4px)
  
  & .next::after 
    content ">"
    margin-left .5em
  
  & a.next:hover 
    transform: translateX(4px)
  
  & a.prev::before,
  & a.next::after
    font-weight: bold


.post-tags a 
  color $light-post-link-color
  margin-left: 5px
  &:hover
    color $light-post-link-hover-color

.post-category a
  margin-left: 5px

.tag:not(:last-child) a::after 
  content: " / "
