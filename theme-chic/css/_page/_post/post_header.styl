// post structure
.post-wrap
  p
    font-size 1em
    margin 1em 0 1em 0
  .post-header h1
    text-align center
    font-weight normal
    margin 50px 0 0 0 !important

  .post-title
    font-size 2em
    line-height 1.5em

  .post-meta
    color rgba(85, 85, 85, 0.52941) !important
    
    .post-author
    .post-time
      color #3e3e3e
      font-size 0.8em
      display block
      text-align center
    .post-author
      margin-top 1em
      font-size 1em
    .dark-theme &
      color $dark-font-secondary-color !important

    a
      color $light-post-link-color
      .dark-theme &
        color $dark-post-link-color

      &:hover
        color $light-post-link-hover-color
        .dark-theme &
          color $dark-post-link-hover-color
        
      
    
  